extends base
include mixins/video

block content 
    form(method="GET")
        input(name = "keyword",Placeholder="Search by title", type = "text")
        input(type="submit", value="search")

    if keyword
        h4 #{videos === [] ? "" : `i found ${videos.length} videos!`}
        //- I found #{videos.length} videos!
        each video in videos 
            +video(video)   
    